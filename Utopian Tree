    public static int utopianTree(int n)
    {
      int height = 1;
        for (int i = 0; i <n; i++)
        {
            switch (i%2>0)
            {
                case true:
                    height++;
                    break;
                case false:
                    height = height * 2;
                    break;
            }
        }
        return height;
    }
